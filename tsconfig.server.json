{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "target": "ES2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "strict": true,
    "isolatedModules": true
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules", "dist", "src/client"]
} 